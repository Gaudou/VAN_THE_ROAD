<div id="search-form" class="bg-light p-4 shadow-sm rounded">
  <%= form_tag vans_path, method: :get do %>
  <div class="row">
   <div class="col">
     <%= text_field_tag :model,
        params[:model],
        class: "form-control",
        placeholder: "Model"
      %>
   </div>

   <div class="col">
    <%= text_field_tag :van_city,
        params[:van_city],
        class: "form-control",
        placeholder: "City"
      %>
   </div>

   <div class="col">
    <div class="input-group flex-nowrap">
    <span class="input-group-text" id="addon-wrapping"><i class="fas fa-male"></i></span>
      <%= number_field_tag :capacity,
        params[:capacity],
        class: "form-control",
        placeholder: "Capacity",
        min:0
      %>
   </div>
   </div>

   <div class="col">
      <%= submit_tag "Search", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
</div>
