<div id="search-form" class="bg-light p-4 shadow-sm rounded">
  <%= form_tag vans_path, method: :get do %>
  <div class="row">
   <div class="col">
     <%= text_field_tag :model,
        params[:model],
        class: "form-control",
        placeholder: "Model"
      %>
   </div>

   <div class="col">
    <%= text_field_tag :van_city,
        params[:van_city],
        class: "form-control",
        placeholder: "City"
      %>
   </div>

   <div class="col">
      <%= number_field_tag :capacity,
        params[:capacity],
        class: "form-control",
        placeholder: "Capacity",
        min:0
      %>
   </div>
  </div>

  <div class="row">
    <div class="col">
      <%= label_tag "From" %>
        <%= date_field_tag :starting_date,
          params[:starting_date],
          class: "form-control",
          placeholder: "From"
        %>

    </div>
    <div class="col">
      <%= label_tag "To" %>
       <%= date_field_tag :ending_date,
          params[:ending_date],
          class: "form-control",
          placeholder: "To"
        %>
    </div>

    <div class="col">
      <%= submit_tag "Search", class: "btn btn-primary btn-lg mt-4" %>
    </div>
  </div>
  <% end %>
</div>
